<h3>
    Category List
</h3>
<h3>
    <a href="/categories/addCategory" class="btn btn-danger">
        <i class="fa fa-plus"> </i> Create New
    </a>
</h3>

<form action="/categories/search" method="POST" autocomplete="off">
    <div class="form-group">
        <label>Search category</label>
        <input type="text" class="form-control" name="search" placeholder="Search details" required="true" style="width: 400px;">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-search"></i>Search</button>
    </div>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Manipulation</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.desc}}</td>
            <td>
                <a href="/categories/{{this._id}}">
                    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                </a>
                <a href="/categories/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record?');">
                    <i class="fa fa-trash fa-lg" aria-hidden="true">
                    </i>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>